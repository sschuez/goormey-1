<h4>
  <% if current_user == @user %>
    Your profile
  <% else %>
    <%= @user.username %>
  <% end %>
</h4>
<br>

<div class="pc-tab">
<input checked="checked" id="tab1" type="radio" name="pct" />
<input id="tab2" type="radio" name="pct" />
<input id="tab3" type="radio" name="pct" />
  <nav>
    <ul>
      <li class="tab1">
        <label for="tab1">recipes</label>
      </li>
      <li class="tab2">
        <label for="tab2">saved recipes</label>
      </li>
      <li class="tab3">
        <label for="tab3">profile</label>
      </li>
    </ul>
  </nav>
  <section>
    <div class="tab1">
      <h4>
        <%= current_user == @user ? "your recipes" : "#{@user.username.possessive} recipes"%>
      </h4>
      <br>
      <% @user.recipes.each do |recipe| %>
        <%= link_to recipe.name, recipe_path(recipe) %>
        <br>
      <% end %>
    </div>
    <div class="tab2">
      <h4>saved recipes</h4>
      <br>
      <p>
        <%= current_user == @user ? "you have not saved any recipes yet" : "#{@user.username} has not saved any recipes yet"%>
      </p>
    </div>
    <div class="tab3">
      <h4>profile</h4>
      <br>
      <p><strong>username:</strong> <%= @user.username %></p>
      <% if @user == current_user || @user.show_username == false || current_user.admin? %>
        <p><strong>name:</strong> <%= @user.full_name %><%= policy(@user).update? ? " (name public: #{@user.show_username})" : "" %></p>
      <% end %>

      <% if policy(@user).update? %>
        <p><strong>email:</strong> <%= @user.email %></p>
        <%= link_to "edit profile", edit_user_registration_path, class: "btn btn-ghost" %>
      <% end %>
    </div>
  </section>
</div>