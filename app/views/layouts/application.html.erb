<!DOCTYPE html>
<html>
  <head>
    <%# <script async src="https://www.googletagmanager.com/gtag/js?id=GTM-MCMNLVP"></script> %>
    <%= javascript_include_tag 'analytics', async: true %>
    
    <title><%= meta_title %></title>
    <meta name="description" content="<%= meta_description %>">

    <!-- Facebook Open Graph data -->
    <%= render 'shared/_facebook_open_graph_data' %>
    <!-- Twitter Card data -->
    <%= render 'shared/twitter_card_data' %>  

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/analytics' %>
    
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>

    <div class="background-main">
      <%= yield %>
      <%= render 'shared/contact' %>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
