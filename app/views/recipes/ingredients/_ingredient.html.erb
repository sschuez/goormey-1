<%= turbo_frame_tag ingredient, data: { sgid: ingredient.to_sgid_param } do %>

  <div class="ingredient-show justify-space-between">
    <div>
      <%= ingredient.description %>
    </div>
    
    <% if policy(ingredient.recipe).edit? %>
      <div class="item-actions" data-toggle-actions-target="actions">

        <%= link_to edit_recipe_ingredient_path(ingredient.recipe, ingredient), 
            data: { turbo_frame: dom_id(ingredient) } do %>
          <%= Icon.call("edit") %>
        <% end %>
        
        <%= button_to recipe_ingredient_path(ingredient.recipe, ingredient), 
            form: { data: { turbo_confirm: "Are you sure?" } }, 
            method: :delete, 
            class: "btn-styling" do %>
          <%= Icon.call("trash") %>
        <% end %>

        <%= Icon.call("handle") %>
      </div>
    <% end %>
  </div>


<% end %>
