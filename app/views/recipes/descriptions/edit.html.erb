<%= turbo_frame_tag nested_dom_id(:description, @recipe) do %>

  <%= simple_form_for @recipe, url: recipe_description_path(@recipe) do |f| %>
    <div class="justify-space-between">
      <div>
        <%= f.input :name %>
        <%= f.input :description,
            input_html: { data: { controller: "textarea-autogrow" } } %>
      </div>
      
      <div class="flex-end item-actions">
        <%= link_to recipe_path(@recipe) do %>
          <%= Icon.call("cross") %>
        <% end %>
        <button name="button" type="submit" class="btn-styling">
          <%= Icon.call("tick") %>
        </button>
      </div>

    </div>
    <br>
  <% end %>

<% end %>