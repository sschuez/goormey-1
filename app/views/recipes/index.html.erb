<p id="notice"><%= notice %></p>

<h4>Recipes</h4>
<%= link_to 'New Recipe', new_recipe_path %>

<ul class="cards">
  <% @recipes.each do |recipe| %>
    <li>
      <%= link_to recipe_path(recipe), class: "card" do %>
        <%= image_tag "sample_meal.jpg", class: "card__image" %>
        <div class="card__overlay">
          <div class="card__header">
            <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>                     
            <img class="card__thumb" src="https://kitt.lewagon.com/placeholder/users/sschuez" alt="" />
            <div class="card__header-text">
              <h3 class="card__title"><%= recipe.name %></h3>            
              <span class="card__status">1 hour ago</span>
            </div>
          </div>
          <p class="card__description"><%= recipe.description %></p>
          <%# <p>= link_to 'Edit', edit_recipe_path(recipe)</p> %>
          <%# <p>= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }</p> %>
        </div>
      <% end %>
    </li>
  <% end %>  
</ul>
<br>

