  <%= simple_form_for(@recipe, data: { turbo_frame: :_top }) do |f| %>
<div class="main-card">
  <%#= simple_form_for(@recipe) do |f| %>
  <%#= simple_form_for(@recipe, data: { turbo: :false }) do |f| %>
  <%#= simple_form_for(@recipe, local: :true) do |f| %>

  <%# DELETE ICON TOP%>
  <%= link_to recipe_path(@recipe), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure you want to delete recipe #{@recipe.name}?"
    } do %>
    <i class="top-icon fas fa-trash-alt"></i>
  <% end %>

    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
    <div id="edit-recipe" class="edit-form">
      <%= render "recipe_form", f: f %>
      <br>
      <div class="save-recipe">
        <%= f.button :submit, "✓ Save recipe", class: "btn-ghost btn-green" %>
      </div>  
    </div>
    
    <div id="edit-ingredients" class="edit-form">
      <%= render "ingredients_form", f: f %>
      <br>
      <div class="save-recipe">
        <%= f.button :submit, "✓ Save recipe", class: "btn-ghost btn-green" %>
      </div>
    </div>

    <div id="edit-instructions" class="edit-form">
      <%= render "instructions_form", f: f %>
      <br>
      <div class="save-recipe">
        <%= f.button :submit, "✓ Save recipe", class: "btn-ghost btn-green" %>
      </div>
    </div>


  <%# DELETE ICON BOTTOM%>
  <%= link_to recipe_path(@recipe), data: {
    turbo_method: :delete,
      turbo_confirm: "Are you sure you want to delete recipe #{@recipe.name}?"
    } do %>
    <i class="bottom-icon fas fa-trash-alt"></i>
  <% end %>
</div>
  <% end %>
 