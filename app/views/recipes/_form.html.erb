<div class="main-card">
  <%= simple_form_for(@recipe) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="edit-form">
      <%= render "recipe_form", f: f %>
    </div>
    
    <div class="edit-form">
      <%= render "ingredients_form", f: f %>
    </div>

    <div class="edit-form">
      <%= render "instructions_form", f: f %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
 