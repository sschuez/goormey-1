<%# METADATA %>
<% content_for :meta_title, "#{@survey.questions.count} questions for a foodie fellow - #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, "I've created this survey to better understand what makes a cool and active community, a community that's connected by a shared passion for food and home-cooking" %>
<%# /METADATA %>

<h1>Just a quick survey..</h1>
<div class="main-card">
  <br>
  <h4>Only <%= @survey.questions.count %> questions</h4>
  <% if @survey.description %>  
    <p><%= @survey.description %></p>
  <% end %>
  <br>
  <%= simple_form_for([@survey, @submission], data: { turbo: :false }) do |f| %>
    <div class="form-group">
    <%= f.input :email, 
                label: "Please enter email address",
                hint: "If you're uncomfortable giving away you email, feel free to enter anyting you like." %>
    </div>
    <%= f.button :submit, "To survey", class: "btn-ghost" %>
  <% end %>
  <br>
</div>